extends ../layouts/index
block contenido 
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
            
        h2.text-center.text-2xl.font-extrabold= pagina
        
        if errores
            div(class="max-w-md mx-auto my-10")
                each  error  in errores 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg


        div.mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action ="/api/forget")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-2.font-bold(for="email") Email de Registro
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-grey-400(placeholder="Tu Email"
                        type="email" name="email")

                    div.flex.items-center.justify-between 
                        a.text-grey-500.text-xs(href="/api/login") ¿Ya tienes una cuenta?
                        a.text-grey-500.text-xs(href="/api/forget") Olvidé mi Contraseña


                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Enviar")